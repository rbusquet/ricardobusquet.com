---
import "./styles/global.css";
import "./styles/inter.css";
import "./styles/cascadia.css";

export interface Props {
  title: string;
  meta?: Record<string, unknown>;
  lang?: string;
}

const { title, meta = {}, lang = "en" } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    {
      Object.entries(meta).map(([name, content]) => (
        <meta name={name} content={String(content)} />
      ))
    }
    <title>{title}</title>
  </head>
  <body>
    <>
      <div role="heading" aria-level={1} class="header">
        <nav aria-label="Main navigation" class="header-nav">
          <h1>Ricardo Busquet</h1>
          <span>
            <a href="/">Home</a>
            {" 路 "}
            <a href="https://github.com/rbusquet">GitHub</a>
            {" 路 "}
            <a rel="me" href="https://bolha.us/@rbusquet"> Mastodon</a>
            {" 路 "}
            <a rel="me" href="https://twitter.com/@ricbusquet"> Twitter</a>
            {" 路 "}
            <a href="/uses">Uses</a>
          </span>
        </nav>
      </div>
      <slot />
      <footer>
        &copy; Ricardo Busquet - {new Date().getFullYear()}
        <br />
        powered by
        <a href="https://astro.build/" rel="noopener noreferer">astro.build</a>
      </footer>
    </>
  </body>
</html>
